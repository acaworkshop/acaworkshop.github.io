<section class="schedule-section">
  <div class="schedule-card">

    <%
      // --- GROUP ITEMS BY TIME + CATEGORY, ONLY CONFIRMED ---
      const grouped = {};

      for (const row of items) {
        const confirmed = (row["Speaker confirmed?"] || "").toLowerCase();
        if (!confirmed.includes("yes")) continue;

        const time = row.Time || "";
        const category = row.Category || "";
        const key = time + "___" + category;

        if (!grouped[key]) grouped[key] = [];
        grouped[key].push(row);
      }

      const groupKeys = Object.keys(grouped);
      for (const key of groupKeys) {
        const group = grouped[key];
        const first = group[0];
        const category = (first.Category || "").trim();
        const isPanel = category.toLowerCase().includes("panel");

        // Collect REAL speakers (skip "-", "null", empty)
        const speakers = group.filter(r => {
          const s = (r["Speaker(s)"] || "").trim().toLowerCase();
          return s && s !== "-" && s !== "null";
        });
    %>

      <div class="schedule-entry">
        <!-- TIME -->
        <div class="schedule-time-col">
          <span class="schedule-time-badge"><%= first.Time || "" %></span>
        </div>

        <!-- CONTENT -->
        <div class="schedule-content">
          <div class="schedule-header">
            <div class="schedule-pills">
              <% if (category) { %>
                <span class="pill pill-category"><%= category %></span>
              <% } %>
            </div>
          </div>

          <p class="schedule-title"><strong><%= first.Title || first.title || "" %></strong></p>

          <% if (speakers.length > 0) { %>
            <p class="schedule-speaker">
              <strong><%= isPanel ? "Panelists:" : "Speaker:" %></strong>
              <% speakers.forEach((r, idx) => { 
                   const name = (r["Speaker(s)"] || "").trim();
                   const aff = (r["Speaker affiliation"] || "").trim();
                   const website = (r["Speaker website"] || "").trim();
                   const label = aff ? `${name} (${aff})` : name;
              %>
                <% if (idx > 0) { %>, <% } %>
                <% if (website) { %>
                  <a href="<%= website %>" target="_blank" rel="noopener"><%= label %></a>
                <% } else { %>
                  <%= label %>
                <% } %>
              <% }); %>
            </p>
          <% } %>
        </div>
      </div>

    <% } %>

  </div>
</section>
